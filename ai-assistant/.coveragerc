[run]
source = src
branch = True
omit =
    */tests/*
    */__pycache__/*
    */site-packages/*
    */.venv/*
    src/ai_service.py
    src/faiss_rag_service.py
    src/rag_service.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    except ImportError
    CHROMADB_AVAILABLE = False
    QDRANT_AVAILABLE = False
    LITELLM_AVAILABLE = False
    MARQUEZ_AVAILABLE = False

fail_under = 55
show_missing = True
precision = 2

[html]
directory = htmlcov
